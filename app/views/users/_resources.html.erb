<tbody id="resources-tbody">
  <% if @users.empty? %>
    <tr>
      <td class="no_record_found" colspan="7"> <%= t('views.index.no_record_found')%></td>
    </tr>
  <% else %>
    <% @users.each do |user| %>
      <tr>
        <td>
          <input type="checkbox" name="ids[]" value="<%= user.id %>" class="selected_users">
        </td>
        <td>
          <%= link_to user, edit_user_path(user) %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.login %></td>
        <td>
          <span class="<%= user_status_label user.status %>">
            <%= user.status_humanize %>
          </span>
        </td>
        <td class="actions">
          <%= link_to 'Editar', edit_user_path(user), class: "btn btn-success" %>
          <%= link_to 'Excluir', user_path(user), class: "btn btn-danger", method: "delete", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  <% end %>
</tbody>
